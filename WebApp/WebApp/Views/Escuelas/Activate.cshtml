@model WebApp.Models.Escuela

@{
    ViewData["Title"] = "Activar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Activar</h1>

<h3>¿Esta seguro que desea activar esto?</h3>
<div>
    <h4>Escuelas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EscuelaCodigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EscuelaCodigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EscuelaNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EscuelaNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacultadId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacultadId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoId)
        </dd>
    </dl>
    
    <form asp-action="Activate">
        <input type="hidden" asp-for="EscuelaId" />
        <input type="submit" value="Activar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
