@model WebApp.Models.Escuela
@using WebApp.Models

@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4>Escuela</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EscuelaCodigo" class="control-label"></label>
                <input asp-for="EscuelaCodigo" class="form-control" />
                <span asp-validation-for="EscuelaCodigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facultad" class="control-label"></label>
                <select asp-for="FacultadId" class="form-control" asp-items="@ViewBag.Facultades">
                </select>
           
                <span asp-validation-for="FacultadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EscuelaNombre" class="control-label"></label>
                <input asp-for="EscuelaNombre" class="form-control" />
                <span asp-validation-for="EscuelaNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
