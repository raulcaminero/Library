<div class="text-center">
    @*<table class="table table-hover" id="TblServicio">*@
    <table id="TblServicio" class="display" style="width:100%">
        <thead>
            <tr class="bg-info table-sm">
                <td>Codigo</td>
                <td>Descripcion </td>
                <td>Tipo</td>
                <td>F. Inicio</td>
                <td>F. Finalizo</td>
                <td>Facultad</td>
                <td>Escuela</td>
                <td>Carrera</td>
                <td>Acción</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var serv in Model)
            {
                <tr>
                    <td>@serv.Servicio_Codigo</td>
                    <td>@serv.Servicio_Descripcion</td>
                    <td>@serv.TipoServicio_Nombre</td>
                    <td>@serv.Servicio_FechaInicio</td>
                    <td>@serv.Servicio_FechaCierre</td>
                    <td>@serv.Facultad.NombreFacultad</td>
                    <td>@serv.Escuela.Nombre</td>
                    <td>@serv.Carrera.Nombre</td>
                    <td>
                        <a href="/Servicio/Detalle/@serv.Servicio_Id"><i class="fa fa-eye fa-2x"></i> </a>
                        |
                        @if (serv.Estado_Id == "I")
                        {
                            <a href="/Servicio/Editar/@serv.Servicio_Id"><i class="fa fa-edit fa-2x"></i> </a>
                        }
                        else
                        {
                            <span><i class="fa fa-edit fa-2x"></i> </span>
                        }
                        |
                        @if (serv.Estado_Id == "I")
                        {
                            <a href="/Servicio/Eliminar/@serv.Servicio_Id"><i class="fa fa-trash-o fa-w-18 fa-2x" style="color:red"></i> </a>
                        }
                        else
                        {
                            <span><i class="fa fa-trash-o fa-2x"></i> </span>
                        }

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
<hr />
@*<div><span style="color:red">@Html.ValidationSummary("NoListado")</span></div><br />*@
<div class="text-center"><h3>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</h3></div>

@section Scripts{
    <!-- jQuery -->
    <script language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>

    <!-- El JavaScript de DataTables -->
    <script language="javascript" type="text/javascript" src=" https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#TblServicio').DataTable();
        });

    </script>

}