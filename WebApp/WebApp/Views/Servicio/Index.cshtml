@model IEnumerable<WebApp.Models.Servicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Servicio_Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio_FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio_FechaCierre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio_Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoServicio_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facultad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Escuela)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio_Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio_Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio_FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio_FechaCierre)
