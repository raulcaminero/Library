            <td>
                @Html.DisplayFor(modelItem => item.TipoServicio_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Campus.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrera.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facultad.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Escuela.CodigoEscuela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.EstadoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Servicio_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Servicio_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Servicio_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
