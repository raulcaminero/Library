@model WebApp.Models.SolicitudServicio

@{
    ViewData["Title"] = "Detalles de solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Detalles de solicitud</h1>

<div>
    <h4>Detalle</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.primer_nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.primer_nombre)
            @Html.DisplayFor(model => model.Usuario.primer_apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_FechaCierre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_FechaCierre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_Costo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_Costo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Estado)
        </dt>
        <dd class="col-sm-10">

            <form asp-action="CambiarEstado" asp-route-id="2">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <select asp-for="IdEstado" class="form-control-sm">
                        <option value="P">Pendiente de documentos</option>
                        <option value="N">Aceptar solicitud (inscribir)</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>

        </dd>

    </dl>

    <h3>Documentos entregados</h3>
    <a asp-action="CargarPago" class="btn btn-success">Cargar documento de pago</a>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Archivo</th>
                <th></th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var archivo in Model.DocumentosEntregados)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => archivo.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => archivo.NombreArchivo)
                    </td>
                    <td>
                        <a asp-action="Descargar" asp-controller="Archivos" asp-route-id="@archivo.IdArchivo" class="btn btn-success">Descargar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
<div>

    <a asp-action="Index">Regresar a la lista</a>
</div>
