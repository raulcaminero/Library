@model WebApp.Models.SolicitudServicio

@{
    ViewData["Title"] = "Detalles de solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Detalles Solicitud</h1>

<div>
    <h4>Detalle</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.primer_nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.primer_nombre)
            @Html.DisplayFor(model => model.Usuario.primer_apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_FechaCierre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_FechaCierre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Servicio_Costo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Servicio_Costo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio.Estado)
        </dt>
        <dd class="col-sm-10">
            <form asp-action="Detalles" asp-route-id="2">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <select asp-items="@ViewBag.Estados" asp-for="IdEstado" class="form-control-sm"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </dd>

    </dl>

    @* Div para cargar el pago *@
    <div id="pago">
        @{await Html.RenderPartialAsync("CargarPago", model: new WebApp.ViewModels.Solicitudes.PagoSolicitudViewModel() { IdSolicitud = Model.Id });}
    </div>

</div>
<div>

    <a asp-action="Index">Regresar a la lista</a>
</div>
