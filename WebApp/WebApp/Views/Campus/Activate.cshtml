@model WebApp.Models.Campus

@{
    ViewData["Title"] = "Activar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Activar</h1>

<h3>¿Esta seguro que desea activar esto?</h3>
<div>
    <h4>Campus</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CampusCodigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CampusCodigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CampusNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CampusNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoId)
        </dd>
    </dl>
    
    <form asp-action="Activate">
        <input type="hidden" asp-for="CampusId" />
        <input type="submit" value="Activar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
