@model WebApp.Models.Campus
@using WebApp.Models

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Campus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CampusId" />
            <div class="form-group">
                <label asp-for="CampusCodigo" class="control-label"></label>
                <input asp-for="CampusCodigo" class="form-control" />
                <span asp-validation-for="CampusCodigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampusNombre" class="control-label"></label>
                <input asp-for="CampusNombre" class="form-control" />
                <span asp-validation-for="CampusNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localidad" class="control-label"></label>
                <input asp-for="Localidad" class="form-control" />
                <span asp-validation-for="Localidad" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EstadoId" class="form-control">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
