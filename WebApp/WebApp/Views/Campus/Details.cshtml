@model WebApp.Models.Campus
@using WebApp.Models

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Campus</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CampusCodigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CampusCodigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CampusNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CampusNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CampusId">Editar</a> |
    <a asp-action="Delete" asp-route-id="@Model.CampusId">Eliminar</a> |
    @if (Model.EstadoId == "A")
    {
        <a asp-action="Inactivate" asp-route-id="@Model.CampusId">Inactivar</a>
    }
    else
    {
        <a asp-action="Activate" asp-route-id="@Model.CampusId">Activar</a>
    }
    <br />
    <a asp-action="Index">Regresar a la lista</a>
</div>
