@model WebApp.Models.BookPages

@{
    ViewData["Title"] = "Pages";
}

<h1>@Model.Book.Title</h1>

<div>
    <h4>Page: @Model.Page</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="PreviousPage" asp-route-id="@Model.BookId" asp-route-page="@Model.Page">Previous</a> |
    <a asp-action="NextPage" asp-route-id="@Model.BookId" asp-route-page="@Model.Page">Next</a> |
    <a asp-action="Index">Back to List</a>
</div>
