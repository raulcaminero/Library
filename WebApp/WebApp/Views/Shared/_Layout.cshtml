<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/pdfmake-0.1.18/dt-1.10.12/af-2.1.2/b-1.2.2/b-colvis-1.2.2/b-flash-1.2.2/b-html5-1.2.2/b-print-1.2.2/cr-1.3.2/fc-3.2.2/fh-3.1.2/kt-2.1.3/r-2.1.0/rr-1.1.2/sc-1.4.2/se-1.2.0/datatables.css" />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/buttons/1.3.1/css/buttons.bootstrap4.min.css" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.4/css/buttons.dataTables.min.css" />

    <!-- Solo colocar esta Linea -->
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <div>
            <img src="https://ciencias.uasd.edu.do/theme/uasdvirtual/pix/facultades/bg/CI_bg.jpg?v=1" class="img-fluid" alt="Responsive image">
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Culminare</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <button type="button" class="btn col-1" style="width:50%;border-radius:25px">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSRpYhZKw5Ww7Tg_9YFAB63f-x5NHb0vTpANQ&usqp=CAU"
                         class="img-fluid" alt="Responsive image" style="width:50%;border-radius:25px">
                </button>
            </div>
        </nav>
    </header>
    <div class="container-fluid  bg-light">
        <div class="row pr-3">
            <div id="nav-drawer" data-region="drawer" class="d-print-none moodle-has-zindex  col-sm-3 my-scroll hidden-scroll" aria-hidden="false" tabindex="-1" style="margin-top: -15px;">
                <nav class="list-group" aria-label="Monografio" style="margin-top:45px">
                    <ul style="list-style: none;padding-left:20px;">
                        <li>
                            <a class="list-group-item list-group-item-action bg-primary text-white" href="#">
                                <div class="ml-0">
                                    <div class="media">
                                        <span class="media-left">
                                            <i class="icon fa fa-graduation-cap fa-fw mr-3" aria-hidden="true"></i>
                                        </span>
                                        <span class="media-body font-weight-bold">
                                            <span class="media-body ">Monográfico</span>
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="list-group-item list-group-item-action " asp-controller="Modulo" asp-action="Index">
                                <div class="ml-0">
                                    <div class="media">
                                        <span class="media-left">
                                            <i class="icon fa fa-users fa-fw  mr-3" aria-hidden="true"></i>
                                        </span>
                                        <span class="media-body ">Modulos</span>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="list-group-item list-group-item-action " asp-controller="Servicio" asp-action="Index">
                                <div class="ml-0">
                                    <div class="media">
                                        <span class="media-left">
                                            <i class="icon fa fa-users fa-fw  mr-3" aria-hidden="true"></i>
                                        </span>
                                        <span class="media-body ">Servicios</span>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="list-group-item list-group-item-action " asp-controller="Calificaciones" asp-action="Index">
                                <div class="ml-0">
                                    <div class="media">
                                        <span class="media-left">
                                            <i class="icon fa fa-users fa-fw  mr-3" aria-hidden="true"></i>
                                        </span>
                                        <span class="media-body ">Calificaciones</span>
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <main role="main" class="pb-3 mb-3 col-9 bg-white" style="margin-top:40px;border-top: 6px solid #3d8fd1;padding:20px;">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Ramontesis - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
