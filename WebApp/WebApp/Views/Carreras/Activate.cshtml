@model WebApp.Models.Carrera
@using WebApp.Models 
@{
    ViewData["Title"] = "Activar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Activar</h1>

<h3>¿Esta seguro que desea activar esto?</h3>
<div>
    <h4>Campus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarreraCodigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarreraCodigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarreraNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarreraNombre)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoId)
        </dd>
    </dl>

    <form asp-action="Activate">
        <input type="hidden" asp-for="CarreraId" />
        <input type="submit" value="Activar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
